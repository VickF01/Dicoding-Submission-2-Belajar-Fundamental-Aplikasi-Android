<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github</item>
        <item name="colorPrimaryVariant">@color/listBackground</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashBackground">
        <item name="android:backgroundTint">@color/listBackground</item>
    </style>
    <style name="TabLayout">
        <item name="background">@color/listBackground</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>
    <style name="TextViewColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CardColor">
        <item name="cardBackgroundColor">@color/listBackground</item>
    </style>
</resources>